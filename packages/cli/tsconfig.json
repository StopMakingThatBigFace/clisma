{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@clisma/core": [
        "../core/src/index.ts"
      ],
      "@clisma/config": [
        "../config/src/index.ts"
      ]
    }
  },
  "references": [
    { "path": "../config" },
    { "path": "../core" }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
