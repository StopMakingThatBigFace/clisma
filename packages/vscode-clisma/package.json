{
  "name": "vscode-clisma",
  "displayName": "clisma",
  "description": "Syntax highlighting and autocomplete for clisma schema files",
  "version": "0.3.1",
  "publisher": "StopMakingThatBigFace",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/StopMakingThatBigFace/clisma"
  },
  "keywords": [
    "clisma",
    "hcl",
    "clickhouse",
    "migrations"
  ],
  "files": [
    "extension.js",
    "lib/**",
    "vendor/**",
    "generated/**",
    "snippets/**",
    "syntaxes/**",
    "language-configuration.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:clisma",
    "onLanguage:hcl",
    "onLanguage:plaintext",
    "workspaceContains:**/clisma.hcl",
    "workspaceContains:**/*.clisma"
  ],
  "contributes": {
    "languages": [
      {
        "id": "clisma",
        "aliases": [
          "clisma"
        ],
        "extensions": [
          ".clisma"
        ],
        "filenames": [
          "clisma.hcl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "clisma",
        "scopeName": "source.clisma",
        "path": "./syntaxes/clisma.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "clisma",
        "path": "./snippets/clisma.json"
      }
    ],
    "configurationDefaults": {
      "[clisma]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      }
    }
  },
  "scripts": {
    "generate:rules": "node ./scripts/generate-rules.js",
    "prepackage": "npm run generate:rules",
    "package": "vsce package --no-dependencies",
    "publish:marketplace": "vsce publish --no-dependencies",
    "publish:openvsx": "ovsx publish"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.2",
    "ovsx": "^0.10.7"
  }
}
